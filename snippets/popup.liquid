<div class="popup-container">
  <div class="popup">
    <span class="close-button" onclick="closePopup()">{%- render 'icon-close' -%}</span>
    <div class="content-container">
      <h2 class="title">Guide des tailles</h2>
      <div class="content"></div>
    </div>
  </div>
</div>

{% style %}
  body > .popup-container {
    display: none;
  }

  body > .popup-container:before {
    content: "";
    position: fixed;
    width: 100%;
    height: 100%;
    background-color: black;
    opacity: .4;
    z-index: 5;
  }

  body > .popup-container .popup {
    position: fixed;
    width: 80vw;
    height: 80vh;
    background-color: white;
    z-index: 10;
    top: 10vh;
    right: 10vw;
    box-shadow: 0px 0px 25px #0000004f;
    border-radius: 20px;
  }

  body > .popup-container .popup .close-button {
    position: absolute;
    cursor: pointer;
    width: 24px;
    height: 24px;
    right: 15px;
    top: 15px;
    z-index: 10;
  }
  body > .popup-container .popup .close-button:hover {
    color: #000;
  }
  
  body > .popup-container .popup .content-container {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  body > .popup-container .popup .title {
    text-align: center
  }

  body > .popup-container .popup .content {
    display: flex;
    flex: auto;
    overflow: auto;
  }
  
  body > .popup-container .popup .content img {
    object-fit: contain;
  }

  @media only screen and (max-width: 768px) {
    .body > .popup-container .popup {
      width: 95vw;
      height: 95vh;
      top: 2.5vh;
      right: 2.5vw;
    }
  }
{% endstyle %}

<script>
  var closePopup = () => {
    $('body > .popup-container').hide();
  }
</script>